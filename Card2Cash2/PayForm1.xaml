<Window x:Class="Card2Cash2.PayForm1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="444.03" Width="545.896" WindowStartupLocation="CenterScreen" SnapsToDevicePixels="True" WindowStyle="ToolWindow">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF46A43C" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="GlassButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid HorizontalAlignment="Left" Height="405" Margin="0,10,-7,-1" VerticalAlignment="Top" Width="545">
        <Label x:Name="request_lbl2" Content="Please provide your phone number" HorizontalAlignment="Left" Margin="23,23,0,0" VerticalAlignment="Top" Width="293" Foreground="#FFADB657" FontFamily="Times New Roman" FontSize="20"/>
        <TextBox x:Name="numver2_txtbx" HorizontalAlignment="Left" Height="33" Margin="367,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" RenderTransformOrigin="0.72,0.965" Foreground="#FF1D1DAE" FontFamily="Times New Roman" FontSize="24"/>
        <Label x:Name="request_lbl3" Content="Please enter the amount to be paid" HorizontalAlignment="Left" Margin="23,98,0,0" VerticalAlignment="Top" Width="293" Foreground="#FFADB657" FontFamily="Times New Roman" FontSize="20"/>
        <TextBox x:Name="amount_txtbx1" HorizontalAlignment="Left" Height="33" Margin="367,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" RenderTransformOrigin="0.72,0.965" Foreground="#FF1D1DAE" FontFamily="Times New Roman" FontSize="24"/>
        <Button x:Name="back_btn1" Style="{StaticResource RoundCorner}" Content="Back" HorizontalAlignment="Left" Margin="23,161,0,0" VerticalAlignment="Top" Width="75" Height="42" Click="back_btn1_Click_1"/>
        <Button x:Name="pay_btn1" Style="{StaticResource RoundCorner}" Content="Pay" HorizontalAlignment="Left" Margin="420,161,0,0" VerticalAlignment="Top" Width="75" Height="42" Click="pay_btn1_Click_1"/>
        <TextBlock x:Name="result_txtbx1" HorizontalAlignment="Left" Margin="23,262,0,0" Foreground="#FFADB657" TextWrapping="Wrap" VerticalAlignment="Top" Height="93" Width="472"/>
        <Label x:Name="Failure_lbl1" Content="Failure" HorizontalAlignment="Left" Margin="23,360,0,0" VerticalAlignment="Top" Width="75" Foreground="#FF9C0404" FontFamily="Times New Roman" FontSize="20" Visibility="Hidden"/>
        <Label x:Name="Success_lbl1" Content="Success" HorizontalAlignment="Left" Margin="420,360,0,0" VerticalAlignment="Top" Width="75" Foreground="#FF0007A2" FontFamily="Times New Roman" FontSize="20" Visibility="Hidden"/>


    </Grid>
</Window>
